<% layout('./layouts/boilerplate') %>

<div class="cluster-map-container">
  <div id="cluster-map"></div>
  <div class="activate-overlay">click to activate</div>
</div>

<section class="grid-content-container">
  <div class="page-title-container">
    <h1 class="page-title">All Campgrounds</h1>
    <a class="ts-button add-button" href="/campgrounds/new">Add Campground</a>
  </div>

  <ul class="card-container"></ul>
  <div class="pagination-controls">
    <button class="page-to prev-page"><</button>
    <p class="page-number"><%= page %></p>
    <button class="page-to next-page">></button>
  </div>
  <% if (page < 1 || page > totalPages) { %>
  <h2>Sorry you have exceeded the number or pages!</h2>
  <% } %>
</section>

<script>
  const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
  const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

