<%= layout('layouts/boilerplate') %>
<div style="grid-area: 1/ span 3; margin: 100px 25px; display: grid; flex-direction: column; justify-content: space-between; padding: 25px; background: rgb(255, 152, 152); border-radius: 10px;">
  <h1>
    <%= err.message %>
  </h1>
  <% if(process.env.NODE_ENV !== "production") { %>
    <p>
      <%= err.stack %>
    </p>
  <% } %>
</div>